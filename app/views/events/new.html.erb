<h1>New Event</h1>

<%= form_with model: @event, data: { turbo:false } do |form| %>
<div>
  <%= form.label :name %><br>
  <%= form.text_field :name %><br>
  <% @event.errors.full_messages_for(:name).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :date %><br>
  <%= form.date_field :date %><br>
  <% @event.errors.full_messages_for(:date).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :location %><br>
  <%= form.text_field :location %><br>
  <% @event.errors.full_messages_for(:location).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.label :description %><br>
  <%= form.text_area :description %><br>
  <% @event.errors.full_messages_for(:description).each do |message| %>
  <div><%= message %></div>
  <% end %>
</div>

<div>
  <%= form.submit %>
</div>
<% end %>

<div>
  <%= link_to "Back", user_path(current_user) %>
</div>

<div>
  <%= link_to "Home", root_path %>
</div>
